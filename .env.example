# -----------------------------------------------------------------------------
# Local development configuration for the credit scoring web application.
# Copy this file to `.env` and fill in values to run locally.
# -----------------------------------------------------------------------------

# Azure subscription & workspace (for testing local downloads)
SUBSCRIPTION_ID="<your-subscription-id>"
TENANT_ID="<your-tenant-id>"
RESOURCE_GROUP="<your-resource-group>"
WORKSPACE_NAME="<your-aml-workspace>"

# Training pipeline display name
TRAINING_PIPELINE_NAME="credit_scoring_training"

# Azure Container Registry info
ACR_NAME="<your-acr-name>"

# Azure Container Instances info
BACKEND_CONTAINER_NAME="credit-scoring-backend"
FRONTEND_CONTAINER_NAME="credit-scoring-frontend"
ACI_LOCATION="eastus"

# Database
DB_PATH="app.db"

# Frontend API URL
REACT_APP_API_URL="http://localhost:8000"
